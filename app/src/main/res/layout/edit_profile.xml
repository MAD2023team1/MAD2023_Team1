<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popUpBox"
        android:layout_width="334dp"
        android:layout_height="262dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkblue"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/NewEmailInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:hint="New email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewNameInput" />

        <EditText
            android:id="@+id/NewNameInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="New name"
            android:inputType="text"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/editprofileCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="19dp"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/darkblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewEmailInput" />

        <Button
            android:id="@+id/editprofileChange"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="18dp"
            android:text="Change"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/darkblue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewEmailInput" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
